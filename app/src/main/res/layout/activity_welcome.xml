<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pri.wx.xujc.xzjy.welcome.WelcomeActivity">

    <Button
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_skip"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/img_welcome"/>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
