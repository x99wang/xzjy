<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="pri.wx.xujc.xzjy.home.schedule.ScheduleFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="日期："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_tag_date"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:text="2018.09.21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_date" android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:text="第"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week_f" android:layout_weight="0.3"
                    android:layout_gravity="center_vertical" android:textAlignment="textEnd"/>

            <TextView
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week" android:layout_weight="0.3"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="周"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week_a" android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sp_term" android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingStart="20dp">
            <TextView
                    android:text="一"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week1" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="二"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week2" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="三"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week3" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="四"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week4" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="五"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week5" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="六"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week6" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
            <TextView
                    android:text="日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_week7" android:layout_weight="1"
                    android:layout_gravity="center_vertical" android:textAlignment="center"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="20dp"
                        android:layout_height="match_parent" android:paddingBottom="10dp">
                    <TextView
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"
                            android:layout_height="60dp"/>
                    <TextView
                            android:text="2"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="3"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="4"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="午1"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>

                    <TextView
                            android:text="午2"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="6"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="7"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="8"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="9"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>
                    <TextView
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" android:layout_weight="1"
                            android:layout_gravity="center_horizontal" android:textAlignment="center"/>

                </LinearLayout>
                <GridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:numColumns="7"
                        android:verticalSpacing="1dp" android:stretchMode="columnWidth"
                        android:id="@+id/grid_detail" android:horizontalSpacing="1dp" android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
